# =============================================================================
# TELEMON CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Bot Configuration
# -----------------------------------------------------------------------------
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=telemon_bot

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection URL
DATABASE_URL=postgresql+asyncpg://telemon:telemon@localhost:5434/telemon

# Redis connection URL
REDIS_URL=redis://localhost:6380/0

# -----------------------------------------------------------------------------
# Spawning Configuration
# -----------------------------------------------------------------------------
# Number of messages before a Pokemon spawns
SPAWN_MESSAGE_THRESHOLD=50

# Minimum minutes between time-based spawns
SPAWN_TIME_MIN_MINUTES=5

# Maximum minutes between time-based spawns
SPAWN_TIME_MAX_MINUTES=15

# Seconds before a spawn expires
SPAWN_TIMEOUT_SECONDS=120

# -----------------------------------------------------------------------------
# Economy Configuration
# -----------------------------------------------------------------------------
# Base daily reward in Telecoins
DAILY_REWARD_BASE=100

# Bonus per streak day
DAILY_STREAK_BONUS=10

# Maximum streak bonus multiplier
DAILY_STREAK_MAX=30

# Telecoin reward range for catching
CATCH_REWARD_MIN=10
CATCH_REWARD_MAX=100

# Market seller fee percentage
MARKET_FEE_PERCENT=5

# -----------------------------------------------------------------------------
# Battle Configuration
# -----------------------------------------------------------------------------
# Seconds to make a move before timeout
BATTLE_TURN_TIMEOUT_SECONDS=60

# -----------------------------------------------------------------------------
# Shiny Configuration
# -----------------------------------------------------------------------------
# Base shiny rate (1 in X)
SHINY_BASE_RATE=4096

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=console

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
DEBUG=false
